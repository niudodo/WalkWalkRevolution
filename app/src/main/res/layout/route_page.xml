<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RouteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd = "16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/personalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Routes"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/toSaveScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:tint="#388E3C"
                app:srcCompat="@android:drawable/ic_menu_add" />
        </LinearLayout>

        <View
            android:id="@+id/my_route_title_divider"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:background="#989898" />

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp">
        </ListView>


        <TextView
            android:id="@+id/teamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:text="Team Routes"
            android:textSize="20sp"
            android:textStyle="bold" />
        <View
            android:id="@+id/team_route_title_divider"
            android:layout_height="2.5dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:background="#939393" />

        <ListView
            android:id="@+id/teamRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        </ListView>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>